{
  "name": "LaunchDarkly Flag Variation Field",
  "host": "https://launchdarkly-contentstack-app.vercel.app",
  "description": "Custom field extension for mapping Contentstack entries to LaunchDarkly flag variations",
  "version": "1.0.0",
  "author": "Your Name",
  "email": "your.email@example.com",
  "website": "https://your-website.com",
  "repository": "https://github.com/s-shindeldecker/launchdarkly-contentstack-app",
  "keywords": [
    "contentstack",
    "launchdarkly",
    "feature-flags",
    "cms"
  ],
  "categories": [
    "custom-field"
  ],
  "ui_location": {
    "custom_fields": [
      {
        "title": "LaunchDarkly Flag Variation",
        "uid": "launchdarkly_flag_variation",
        "src": "/index.html",
        "data_type": "json",
        "description": "Map this entry to a LaunchDarkly flag variation",
        "config": {
          "label": "LaunchDarkly Flag Variation",
          "placeholder": "Select a flag and variation"
        },
        "multiple": false,
        "required": false,
        "unique": false,
        "editable": true,
        "display_type": "text",
        "field_metadata": {
          "mandatory": false,
          "unique": false,
          "localizable": false,
          "multiple": false
        },
        "field_type": "custom_field",
        "field_validation": {
          "required": false,
          "unique": false
        }
      }
    ],
    "sidebar_widget": [
      {
        "title": "LaunchDarkly Integration",
        "uid": "launchdarkly_sidebar_widget",
        "src": "/index.html",
        "description": "View and manage LaunchDarkly feature flags for this entry"
      }
    ],
    "config_screen": [
      {
        "type": "config-screen",
        "src": "/config-screen.html",
        "uid": "launchdarkly_config",
        "title": "LaunchDarkly Settings"
      }
    ]
  },
  "framework": "react",
  "entry": "index.html",
  "webhooks": [],
  "functions": [],
  "config": {
    "launchdarkly": {
      "api_key": "",
      "environment": "production",
      "base_url": "https://app.launchdarkly.com/api/v2"
    }
  },
  "oauth": {
    "client_id": "",
    "client_secret": ""
  },
  "targets": [
    "app-config",
    "custom-field",
    "sidebar-widget"
  ]
}